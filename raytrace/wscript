from waflib import Utils
import os

top = '.'
PROJECT_NAME = 'raytrace'

def options(opt):
	# stub
	return

def configure(conf):
    # stub
    return

def build(bld):
	source = [
        'raytrace.cpp',
		'trace2.cpp',
		'trace3.cpp',
		'../public/tier0/memoverride.cpp'
    ]

	includes = [
		'.',
		'../public',
		'../public/tier1',
		'../public/tier0',
		'../common',
		'../utils/common'
	]

	defines = []

	libs = [
		'tier0',
		'tier1'
    ]

	bld.stlib(
		source   = source,
		target   = PROJECT_NAME,
		name     = PROJECT_NAME,
		features = 'c cxx',
		includes = includes,
		defines  = defines,
		use      = libs,
		subsystem = bld.env.MSVC_SUBSYSTEM,
		idx      = bld.get_taskgen_count()
	)

